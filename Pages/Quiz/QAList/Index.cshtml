@page
@model ABTQuiz.Pages.Quiz.QAList.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Available Questions</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New QA</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuizQuestions[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizQuestions[0].AnswerOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizQuestions[0].AnswerTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizQuestions[0].AnswerThree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizQuestions[0].AnswerFour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizQuestions[0].CorrectAns)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuizQuestions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerOne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerTwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerThree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerFour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAns)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
